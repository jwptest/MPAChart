<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666666"
    android:orientation="vertical">

    <LinearLayout style="@style/right_keyboard_item">

        <TextView
            android:id="@+id/tv1"
            style="@style/right_keyboard_item_text"
            android:tag="1"
            android:text="1"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv2"
            style="@style/right_keyboard_item_text"
            android:tag="2"
            android:text="2"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv3"
            style="@style/right_keyboard_item_text"
            android:tag="3"
            android:text="3"/>

    </LinearLayout>

    <View style="@style/right_keyboard_line_horizontal"/>

    <LinearLayout style="@style/right_keyboard_item">

        <TextView
            android:id="@+id/tv4"
            style="@style/right_keyboard_item_text"
            android:tag="4"
            android:text="4"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv5"
            style="@style/right_keyboard_item_text"
            android:tag="5"
            android:text="5"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv6"
            style="@style/right_keyboard_item_text"
            android:tag="6"
            android:text="6"/>

    </LinearLayout>

    <View style="@style/right_keyboard_line_horizontal"/>

    <LinearLayout style="@style/right_keyboard_item">

        <TextView
            android:id="@+id/tv7"
            style="@style/right_keyboard_item_text"
            android:tag="7"
            android:text="7"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv8"
            style="@style/right_keyboard_item_text"
            android:tag="8"
            android:text="8"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv9"
            style="@style/right_keyboard_item_text"
            android:tag="9"
            android:text="9"/>

    </LinearLayout>

    <View style="@style/right_keyboard_line_horizontal"/>

    <LinearLayout style="@style/right_keyboard_item">

        <TextView
            android:id="@+id/tv11"
            style="@style/right_keyboard_item_text"
            android:tag="11"
            android:text="OK"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <TextView
            android:id="@+id/tv0"
            style="@style/right_keyboard_item_text"
            android:tag="0"
            android:text="0"/>

        <View style="@style/right_keyboard_line_vertical"/>

        <ImageView
            android:id="@+id/tvn1"
            style="@style/right_keyboard_item_text"
            android:scaleType="centerInside"
            android:src="@drawable/right_delete_icon"
            android:tag="-1"/>

    </LinearLayout>

</LinearLayout>