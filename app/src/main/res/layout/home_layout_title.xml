<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTitleBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_titleBar_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivExitLogin"
        android:layout_width="@dimen/home_titleBar_height"
        android:layout_height="match_parent"
        android:clickable="true"
        android:padding="@dimen/dp_13"
        android:scaleType="centerInside"
        android:src="@drawable/exit_login"
        tools:tooltipText="退出登录"/>

    <View
        android:layout_width="@dimen/dp_0.6"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_m_0.6"
        android:background="#35000000"/>

    <ImageView
        android:id="@+id/ivKM"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:scaleType="centerInside"
        android:src="@drawable/km_icon"
        tools:tooltipText="KM"/>

    <RelativeLayout
        android:id="@+id/llMoney"
        android:layout_width="@dimen/dp_180"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ivKM"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tvMoneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tvBFB"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/tvMoneyType"
            android:background="@drawable/bfbkk"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"/>

        <ImageView
            android:id="@+id/ivMoneyIcon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignBottom="@+id/tvBFB"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/tvBFB"
            android:scaleType="fitEnd"
            android:src="@drawable/xiala"/>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_0.6"
        android:layout_height="match_parent"
        android:background="#35000000"/>

    <RelativeLayout
        android:id="@+id/llTimer"
        android:layout_width="@dimen/dp_115"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:id="@+id/tvJZTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_13"/>
        <!--xiala 未选中图标-->
        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_alignBottom="@+id/tvJZTimer"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/tvJZTimer"
            android:scaleType="fitEnd"
            android:src="@drawable/xiala"/>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_0.6"
        android:layout_height="match_parent"
        android:background="#35000000"/>

    <View
        android:layout_width="0.0dp"
        android:layout_height="1px"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/ivUHead"
        android:layout_width="@dimen/dp_40"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/userhead"
        tools:tooltipText="用户头像"/>

    <TextView
        android:id="@+id/tvUName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:text="用户名称"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥8888.00"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12"/>

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:scaleType="centerInside"
        android:src="@drawable/shuxin"
        tools:tooltipText="刷新"/>
</LinearLayout>