<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/home_right_menu_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/home_right_top"
        android:text="投资金额"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"/>

    <RelativeLayout
        android:id="@+id/rlEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMoneyReduce"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_money_fall_button"/>

        <ImageView
            android:id="@+id/ivMoneyAdd"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/home_money_add_button"/>

        <!--宽高比1.53-->
        <ImageView
            android:id="@+id/ivEditBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_toLeftOf="@+id/ivMoneyAdd"
            android:layout_toRightOf="@+id/ivMoneyReduce"
            android:scaleType="fitXY"
            android:src="@drawable/money_edit_bg"/>

        <TextView
            android:id="@+id/tvInvestmentMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_3"
            android:gravity="center"
            android:singleLine="true"
            android:tag="10"
            android:text="¥100"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12.5"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="预期收益"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tvProfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="¥"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_18"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@drawable/fengexian"/>

    <TextView
        android:id="@+id/tvInterestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_18"
        android:gravity="center"
        android:text="收益率-%"
        android:textColor="#AAFFFFFF"
        android:textSize="@dimen/sp_12"/>

    <!--<ImageView-->
    <!--android:id="@+id/ivRise"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:scaleType="centerInside"-->
    <!--android:src="@drawable/home_add_button"-->
    <!--android:visibility="gone"/>-->

    <!--<ImageView-->
    <!--android:id="@+id/ivFall"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="@dimen/dp_10"-->
    <!--android:scaleType="centerInside"-->
    <!--android:src="@drawable/home_fall_button"-->
    <!--android:visibility="gone"/>-->

    <LinearLayout
        android:id="@+id/llRise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/home_add_button"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@drawable/rise_button_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="看涨"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/home_fall_button"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@drawable/fall_button_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="看跌"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRightNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离交易完成还剩"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"/>

        <TextView
            android:id="@+id/tvRightTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="12"
            android:textColor="#fff601"
            android:textSize="@dimen/sp_20"/>

        <ImageView
            android:id="@+id/ivRightNext"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:scaleType="centerInside"
            android:src="@drawable/right_button_next"/>
    </LinearLayout>


</LinearLayout>