<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55"
    android:background="#333333"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTimer"
            style="@style/open_prize_product1"
            android:text="21:33"/>

        <TextView
            android:id="@+id/tvIndex"
            style="@style/open_prize_product1"
            android:text="1.189562"/>

        <TextView
            android:id="@+id/tvProfit"
            style="@style/open_prize_product1"
            android:text="￥17.9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            style="@style/open_prize_product"
            android:layout_marginTop="@dimen/dp_5"
            android:text="05-09"/>

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIndexValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="1.182356"
                android:textColor="@color/dynamic_title_color"
                android:textSize="@dimen/sp_12"/>

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:scaleType="centerInside"
                android:src="@drawable/fall_icon_item"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvMoney"
            style="@style/open_prize_product"
            android:layout_marginTop="@dimen/dp_5"
            android:text="￥10"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/line_color"/>
</LinearLayout>