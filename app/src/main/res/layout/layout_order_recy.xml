<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.finance.widget.CompletedView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cvProgressBar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_toRightOf="@+id/cvProgressBar"
            android:minWidth="@dimen/dp_32"
            app:tcv_circleColor="@color/transparent"
            app:tcv_progress="30"
            app:tcv_radius="@dimen/dp_13"
            app:tcv_ringBgColor="@color/colorPrimary"
            app:tcv_ringColor="#0000ff"
            app:tcv_strokeWidth="@dimen/dp_2"/>

        <LinearLayout
            android:id="@+id/llTimer"
            android:layout_width="@dimen/dp_32"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:text="11:00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11:00"
                android:textColor="#666666"
                android:textSize="@dimen/sp_11"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llOne"
                style="@style/orderItemLL"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/orderItemText"
                    android:text="欧元/美元(场外)"/>

                <TextView
                    android:id="@+id/tvPurchase"
                    style="@style/orderItemText"
                    android:text="1.785634"/>

                <TextView
                    android:id="@+id/tvMoney"
                    style="@style/orderItemText"
                    android:text="$78.30"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTwo"
                style="@style/orderItemLL">

                <LinearLayout
                    style="@style/orderItemText"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivRiseFall"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/tvExplain"
                        style="@style/orderItemText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="涨跌"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPurchase2"
                    style="@style/orderItemText2"
                    android:text="1.785634"/>

                <TextView
                    android:id="@+id/tvMoney2"
                    style="@style/orderItemText2"
                    android:text="$78.30"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="#777777"/>

</LinearLayout>