<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="noBackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="fullScreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="leftMenuImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="leftMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="centreMenuButton">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="centreMenuLine">
        <item name="android:layout_width">@dimen/dp_0.6</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/centre_menu_from_color</item>
    </style>


    <style name="orderItemLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="orderItemText2" parent="orderItemText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="orderItemText">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:gravity">left</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="right_keyboard_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="right_keyboard_item_text">
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="right_keyboard_line_vertical">
        <item name="android:layout_width">@dimen/dp_0.6</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#5a5a5a</item>
    </style>

    <style name="right_keyboard_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_0.6</item>
        <item name="android:background">#5a5a5a</item>
    </style>

    <style name="open_prize_product">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dynamic_title_color</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="open_prize_product1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="open_prize_product_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_13.5</item>
    </style>


</resources>
